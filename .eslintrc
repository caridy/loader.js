{
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "defaultParams": true,
        "restParams": true,
        "modules": true,
        "classes": true,
        "forOf": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "templateStrings": true,
        "spread": true,
        "destructuring": true
    },
    "rules": {
        "semi": 2,
        "eqeqeq": 2,
        "indent": 2,
        "no-unused-vars": [2, {"vars": "all", "args": "after-used"}]
    }
}
